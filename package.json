{
    "name": "r3f-monitor",
    "version": "0.1.8",
    "license": "MIT",
    "description": "A performance monitor for React Three Fiber. Track FPS, draw calls, memory, and GPU usage.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/anhldh/r3f-monitor.git"
    },
    "homepage": "https://github.com/anhldh/r3f-monitor",
    "keywords": [
        "react-three-fiber",
        "r3f",
        "benchmark",
        "performance-monitoring",
        "monitor",
        "analysis",
        "three",
        "threejs",
        "webgl",
        "r3f-perf",
        "performance",
        "performance-monitor",
        "fps",
        "rendering",
        "devtools",
        "profiler",
        "draw-calls",
        "debug",
        "memory",
        "gpu"
    ],
    "private": false,
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "dev": "vite build --watch",
        "build": "vite build",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "eventemitter3": "^5.0.4",
        "zustand": "^5.0.10"
    },
    "peerDependencies": {
        "@react-three/fiber": ">=8",
        "react": ">=18",
        "react-dom": ">=18",
        "three": ">=0.150"
    },
    "devDependencies": {
        "@types/node": "^25.0.10",
        "@types/react-dom": "^19.2.3",
        "@types/three": "^0.182.0",
        "@vitejs/plugin-react": "^4.3.0",
        "rimraf": "^6.0.0",
        "rollup-plugin-visualizer": "^6.0.5",
        "typescript": "^5.0.0",
        "vite": "^5.4.0",
        "vite-plugin-css-injected-by-js": "^3.5.2",
        "vite-plugin-dts": "^4.2.0"
    }
}
